{
  "name": "tsoa-node-template",
  "version": "1.0.0",
  "description": "Nodejs project template",
  "main": "index.js",
  "scripts": {
    "routes": "tsoa spec-and-routes",
    "dev": "tsoa spec-and-routes && concurrently \"nodemon -x tsoa spec-and-routes\" \"nodemon\"",
    "build": "tsoa spec-and-routes && tsc",
    "test": "tsoa spec-and-routes && jest --detectOpenHandles",
    "tsc": "tsc",
    "lint": "eslint src/** --no-ignore",
    "lint-fix": "eslint src/** --no-ignore --fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "1.19.0",
    "debug": "^4.3.3",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "jsonwebtoken": "8.5.1",
    "mongoose": "6.4.6",
    "reflect-metadata": "0.1.13",
    "swagger-ui-express": "4.5.0",
    "tsoa": "3.8.0",
    "@tsoa/runtime": "3.13.0",
    "tsyringe": "4.6.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.1",
    "@types/debug": "4.1.6",
    "@types/express": "4.17.13",
    "@types/jest": "26.0.24",
    "@types/jsonwebtoken": "8.5.4",
    "@types/node": "16.3.3",
    "@types/supertest": "2.0.11",
    "@types/swagger-ui-express": "4.1.3",
    "@types/uuid": "8.3.1",
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "5.5.0",
    "concurrently": "6.2.0",
    "eslint": "7.22.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-import-newlines": "1.1.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "27.2.0",
    "nodemon": "2.0.12",
    "supertest": "6.1.3",
    "ts-jest": "27.0.7",
    "ts-node": "10.1.0",
    "typescript": "4.3.5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/specs/**/*.+(ts|tsx|js)"
    ]
  }
}
